{
  "name": "blockchain101",
  "version": "1.0.0",
  "description": "A full-stack, from-scratch implementation of a blockchain and cryptocurrency. Built with Node.js, featuring a custom Proof-of-Work consensus mechanism, a decentralized P2P network, a transaction system, and a React-based wallet interface. A learning project for understanding blockchain fundamentals.",
  "source": "client/src/index.html",
  "scripts": {
    "test": "jest --watchAll",
    "start": "npm run build-client && node index.js",
    "dev": "concurrently \"npm run dev-client\" \"nodemon index.js\"",
    "dev-peer": "cross-env GENERATE_PEER_PORT='true' nodemon index.js",
    "build-client": "npm run clean && parcel build client/src/index.html --dist-dir client/dist",
    "dev-client": "npm run clean && parcel client/src/index.html --dist-dir client/dist",
    "clean": "rimraf .parcel-cache client/dist"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JaumeTorrelles/blockchain101.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/JaumeTorrelles/blockchain101/issues"
  },
  "homepage": "https://github.com/JaumeTorrelles/blockchain101#readme",
  "devDependencies": {
    "concurrently": "^9.2.1",
    "cross-env": "^5.2.0",
    "jest": "^30.1.3",
    "nodemon": "^3.1.10",
    "rimraf": "^6.0.1"
  },
  "dependencies": {
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "elliptic": "^6.6.1",
    "express": "^5.1.0",
    "hex-to-binary": "^1.0.1",
    "history": "^4.7.2",
    "parcel": "^2.16.0",
    "react": "^16.6.0",
    "react-bootstrap": "^0.32.4",
    "react-dom": "^16.6.0",
    "react-router-dom": "^4.3.1",
    "redis": "^3.1.1",
    "request": "^2.88.2",
    "uuid": "^3.3.2"
  }
}
